@model GenElect.Models.IndexViewModel
@{
    ViewBag.Title = "Current Schedule";
}

<h2>@ViewBag.Title.</h2>

@*<p class="text-success">@ViewBag.StatusMessage</p>*@
<div>
    <h4>This is your account schedule</h4>
    <hr />
    <dl class="dl-horizontal">
        @if (ViewBag.User.Elective1 == 0)
        {
            <dd><b>Elective 1:</b> Not Chosen</dd>
        }
        else
        { 
            <dd><b>Elective 1:</b> @ViewBag.e1.Name | @Html.ActionLink("Unregister","Unregister", new { electiveID = ViewBag.User.Elective1, period = 1 })</dd>
            <dd>Details and location: @ViewBag.e1.Description</dd>
        }
        
        @if (ViewBag.User.Elective2 == 0)
        {
            <dd><b>Elective 2:</b> Not Chosen</dd>
        }
        else
        {
            <dd><b>Elective 2:</b> @ViewBag.e2.Name | @Html.ActionLink("Unregister", "Unregister", new { electiveID = ViewBag.User.Elective2, period = 2 })</dd>
            <dd>Details and location: @ViewBag.e2.Description<br /></dd>
        }

        @if (ViewBag.User.Elective3 == 0)
        {
            <dd><b>Elective 3:</b> Not Chosen</dd>
        }
        else
        {
            <dd><b>Elective 3:</b> @ViewBag.e3.Name | @Html.ActionLink("Unregister", "Unregister", new { electiveID = ViewBag.User.Elective3, period = 3 })</dd>
            <dd>Details and location: @ViewBag.e3.Description</dd>
        }
    </dl>
</div>
